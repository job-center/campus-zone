    <!-- import the service definition -->
    <import resource="classpath:spring/spring-config-service.xml"/>

    <!-- spring mvc setting -->

    <!-- config the static resources -->
    <mvc:resources mapping="/static/**" location="/static/"/>

    <!-- Inteceptor 记录API请求url和执行时间 -->
